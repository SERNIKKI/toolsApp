<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_weather"
    android:background="@drawable/weather_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/weather_back"
        android:src="@drawable/back"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="请输入城市名"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:id="@+id/weather_city"/>

    <Button
        android:id="@+id/weather_chaxun"
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:text="查询"
        android:alpha="0.5"
        android:textSize="15sp" />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南阳"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#0C0C0C"
            android:layout_centerInParent="true"
            android:id="@+id/weather_tx_city"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2020-04-04"
            android:textSize="15sp"
            android:textColor="#0C0C0C"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/weather_date"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="第六周"
            android:textColor="#0C0C0C"
            android:id="@+id/weather_week"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#0C0C0C"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:id="@+id/weather_warm"
            android:text="7℃"
            android:textColor="#0C0C0C"
            android:textSize="70sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="多云"
            android:textSize="25sp"
            android:textColor="#0C0C0C"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:id="@+id/weather_weather"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="南风0级"
            android:textSize="20sp"
            android:textColor="#0C0C0C"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:id="@+id/weather_fengli"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="运动推荐"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_yundong"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="穿衣推荐"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_chaunyi"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="外出带伞"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_daisan"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="感冒指数"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_ganmao"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="紫外线指数"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_ziwaixian"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0C0C0C"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="舒适度"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/weather_shushidu"/>
</LinearLayout>